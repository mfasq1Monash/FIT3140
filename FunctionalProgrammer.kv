# App controller layout initially a boxlayout for the 2 code boxlayouts sitting # over a box layout containing all the control buttons.



<FunctionalProgrammerWidget>
    orientation: 'vertical'

	FPWScreenManager:
		id: current_view		

	BoxLayout:
		orientation: 'horizontal'
		id: buttons_Layout
		size_hint: (1, .25)

		Button:
			id: save_Button
			text: 'SAVE'
			on_press: root.save_Button()
			on_release: self.text = "SAVE"

		Button:
			id: load_Button
			text: 'LOAD'
			on_press: root.load_Button()
			on_release: self.text = "LOAD"

		Button:
			id: run_Button
			text: 'RUN'
			on_press: root.run_Button()
			on_release: self.text = "RUN"

		Button:
			id: debug_Button
			text: 'DEBUG'
			on_press: root.debug_Button()
			on_release: self.text = "DEBUG"

		Button:
			id: reset_button
			text: 'RESET CODE'
			on_press: root.reset_Button()
			on_release: self.text = 'RESET CODE'
		Button:
			id: exit_Button
			text: 'EXIT'
			on_press: exit()

			
<FPWScreenManager>
	ProgrammerView:
