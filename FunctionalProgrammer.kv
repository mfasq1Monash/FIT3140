# App controller layout initially a boxlayout for the 2 code boxlayouts sitting # over a box layout containing all the control buttons.



<FunctionalProgrammerWidget>
    orientation: 'vertical'
    BoxLayout:
    	id: current_View
    	orientation: 'horizontal'
    	BoxLayout:
			id: predefined_code

		BoxLayout:
    		id: user_code

    BoxLayout:
    	id: labels_view
    	orientation: 'horizontal'	
    	size_hint: (1, .05)

    	Label:
			text: 'CODE BLOCKS'
			size_hint: (1, 1)

    	Label:
    		text: 'USER PROGRAM'
    		size_hint: (1, 1)

	BoxLayout:
    	orientation: 'horizontal'
    	id: buttons_Layout
		size_hint: (1, .25)



		Button:
			id: save_Button
			text: 'SAVE'
			on_press: root.save_Button()

		Button:
			id: load_Button
			text: 'LOAD'
			on_press: root.load_Button()

		Button:
			id: run_Button
			text: 'RUN'
			on_press: root.run_Button()

		Button:
			id: debug_Button
			text: 'DEBUG'
			on_press: root.debug_Button()

		Button:
			id: exit_Button
			text: 'EXIT'
			on_press: exit()

			
